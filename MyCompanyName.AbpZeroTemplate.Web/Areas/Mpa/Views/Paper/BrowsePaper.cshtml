@using Abp.Web.Mvc.Extensions
@using MyCompanyName.AbpZeroTemplate.Web.Navigation
@model MyCompanyName.AbpZeroTemplate.Web.Areas.Mpa.Models.Paper.PaperBrowseViewModel
@{
    ViewBag.CurrentPageName = PageNames.App.Host.PaperBrowse;
}
@section Styles{
    @Html.IncludeStyle("~/libs/bootstrap-table/bootstrap-table.css")

}
@section Scripts
{
    @Html.IncludeScript("~/libs/bootstrap-table/bootstrap-table.js")
    @Html.IncludeScript("~/libs/bootstrap-table/bootstrap-table-cookie.js")
    @Html.IncludeScript("~/libs/bootstrap-table/bootstrap-table-zh-CN.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Paper/BrowsePaper.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>试卷浏览</span> <small>题目详情</small>
                </h1>
            </div>
        </div>
    </div>
</div>@*pageTitle*@


<div class="portlet light margin-bottom-0">
    <form>
        <div class="row">
            <div class="portlet-title">
                <div class="col-sm-6 col-md-4">
                    <label for="PaperNameLabel">试卷名称：</label>
                    <Label id="PaperNameLabel">@Model.PaperName</Label>
                </div>
                <div class="form-group col-sm-6 col-md-4">
                    <label for="AuthorLabel">出题人：</label>
                    <Label id="AuthorLabel">@Model.Author</Label>
                </div>
                <div class="form-group col-sm-6 col-md-4">
                    <label for="DegreeLabel">难度：</label>
                    <Label id="DegreeLabel">@Model.Degree</Label>
                </div>

            </div>
        </div>
    </form>
</div>
<div class="row margin-bottom-10"></div>

<div class="portlet light margin-bottom-0">
    <div class="row">
        <div class="col-xs-12">
            <div id="toolbar" class="btn-group">
                <button id="btn_add" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
                </button>
                <button id="btn_edit" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
                </button>
                <button id="btn_delete" type="button" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
                </button>
            </div>
            <table id="PaperContentTable"></table>
        </div>
    </div>@*题目详情*@
</div>
