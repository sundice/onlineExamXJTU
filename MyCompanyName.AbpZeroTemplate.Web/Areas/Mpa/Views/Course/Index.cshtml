@using Abp.Web.Mvc.Extensions
@using MyCompanyName.AbpZeroTemplate.Web.Navigation
@{
    ViewBag.CurrentPageName = PageNames.App.Host.CourseManage;
}
@section Styles{
    @Html.IncludeStyle("~/libs/bootstrap-table/bootstrap-table.css")

}
@section Scripts
{
    @Html.IncludeScript("~/libs/bootstrap-table/bootstrap-table.js")
    @Html.IncludeScript("~/libs/bootstrap-table/bootstrap-table-zh-CN.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Course/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>章节管理</span>
                </h1>
            </div>
        </div>
    </div>@*col_xs_6表示在一行*@

</div>

<div class="portlet light margin-bottom-5">
    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
        <button id="btn_edit" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn_delete" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
        </button>
    </div>
    <div id="queryform" class="pull-right margin-top-10">
        <input id="CourseTableFilter" placeholder='搜索' type="text"
               style="float:left;width:150px;margin-right:5px;"
               class="form-control">

        <div class="btn-group">
            <button id="btn_search" type="button" class="btn btn-primary margin-right-10">
                <span class="fa fa-search btn-icon-space" aria-hidden="true"></span>
                查询
            </button>
            <button id="btn_reset" type="button" class="btn btn-default">
                <span class="fa fa-eraser btn-icon-space" aria-hidden="true"></span>
                重置
            </button>
        </div>
    </div>
    <table id="CourseTable"></table>
</div>

