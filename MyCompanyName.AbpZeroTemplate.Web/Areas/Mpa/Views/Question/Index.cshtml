@using Abp.Web.Mvc.Extensions
@using MyCompanyName.AbpZeroTemplate.Web.Navigation
@model IEnumerable<System.Web.Mvc.SelectListItem>

@{
    ViewBag.CurrentPageName = PageNames.App.Host.QuestionBrowse;
}

@section Scripts
{
    @Html.IncludeScript("~/Areas/Mpa/Views/Question/Index.js")
}
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>试题浏览</span> <small>浏览试题信息</small>
                </h1>
            </div>
        </div>
    </div>
</div>@*试题浏览*@

<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div class="form">
            <form id="QuestionFilterForm" class="horizontal-form">
                <div class="form-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">@L("DateRange")</label>
                                <input type="text" class="form-control date-range-picker" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="AuthorSelect" class="control-label">出题人</label>
                                @Html.DropDownList("AuthorItem", ViewData["AuthorItem"] as SelectList, "--请选择--", new { id = "AuthorSelect",@class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedQuestionFiltersArea" style="display: none">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">课程</label>
                                    @Html.DropDownList("CourseItem", ViewData["CourseItem"] as SelectList, "--请选择--", new { id = "CourseSelect", @class = "form-control"})
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">章节</label>
                                    @Html.DropDownList("ScopeItem", ViewData["ScopeItem"] as SelectList, "--请选择--", new { id = "ScopeSelect", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">难度</label>
                                    @Html.DropDownList("DegreeItem", ViewData["DegreeItem"] as SelectList, "--请选择--", new { id = "DegreeSelect", @class = "form-control" })

                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">题型</label>
                                    @Html.DropDownList("QuestionTypeItem", ViewData["QuestionTypeItem"] as SelectList, "--请选择--", new { id = "QuestionTypeSelect", @class = "form-control" })

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row ">
                    <div class="col-sm-6">
                        <span id="ShowAdvancedFiltersSpan" class="clickable-item text-muted"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="clickable-item text-muted" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                    <div class="col-sm-6 text-right">
                        <button id="CreateNewQuestionButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> 添加试题</button>
                        <button id="BatchImportQuestionButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> 批量导入</button>
                        <button id="RefreshQuestionsButton" class="btn blue"><i class=" fa fa-refresh"></i> @L("Refresh")</button>

                    </div>
                </div>
            </form>
        </div>
    </div>

</div>@*下拉框选择条件*@


<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div>
            <div id="QuestionsTable"></div>
        </div>
    </div>
</div>@*搜索按钮和JTable*@

